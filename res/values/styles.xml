<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="activated" parent="@style/Theme.AppCompat.Light">
        <item name="android:background">@drawable/list_selector_background</item>
    </style>

    <style name="Help">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="Help.Text">
    </style>

    <style name="Help.Image">
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="Fab" parent="android:Widget.ImageButton">
        <item name="android:layout_width">@dimen/fab_diameter</item>
        <item name="android:layout_height">@dimen/fab_diameter</item>
        <item name="android:layout_gravity">right|bottom</item>
        <item name="android:layout_marginBottom">@dimen/fab_margin</item>
        <item name="android:layout_marginRight">@dimen/fab_margin</item>
        <item name="android:tint">@android:color/white</item>
        <item name="android:background">@drawable/oval</item>
    </style>

</resources>