<?xml version="1.0" encoding="utf-8"?>
<resources>

        <style name="Fab" parent="android:Widget.ImageButton">
                <item name="android:layout_width">@dimen/fab_diameter</item>
                <item name="android:layout_height">@dimen/fab_diameter</item>
                <item name="android:layout_gravity">right|bottom</item>
                <item name="android:layout_marginBottom">@dimen/fab_margin</item>
                <item name="android:layout_marginRight">@dimen/fab_margin</item>
                <item name="android:tint">@android:color/white</item>
                <item name="android:background">@drawable/oval</item>
                <item name="android:elevation">@dimen/elevation_low</item>
                <item name="android:stateListAnimator">@anim/fab_elevation</item>
        </style>

</resources>